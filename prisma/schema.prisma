generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  pk        BigInt   @id @default(autoincrement())
  id        String   @unique @default(value: uuid())
  body      String
  room      Room     @relation(fields: [roomPk], references: [pk])
  roomPk    BigInt
  sender    User     @relation(fields: [senderPk], references: [pk])
  senderPk  BigInt
  createdAt DateTime @default(value: now()) @db.Timestamptz
  updatedAt DateTime @default(value: now()) @updatedAt @db.Timestamptz
}

model Room {
  pk        BigInt    @id @default(autoincrement())
  id        String    @unique @default(value: uuid())
  name      String?
  members   User[]
  messages  Message[]
  createdAt DateTime  @default(value: now()) @db.Timestamptz
  updatedAt DateTime  @default(value: now()) @updatedAt @db.Timestamptz
}

model User {
  pk           BigInt    @id @default(autoincrement())
  id           String    @unique @default(value: uuid())
  username     String    @unique
  email        String?   @unique
  openIdSub    String?   @unique
  firstName    String?
  lastName     String?
  avatarUrl    String?
  rooms        Room[]
  sentMessages Message[]
  createdAt    DateTime  @default(value: now()) @db.Timestamptz
  updatedAt    DateTime  @default(value: now()) @updatedAt @db.Timestamptz
}
