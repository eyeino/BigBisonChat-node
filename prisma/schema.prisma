generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(value: uuid())
  body      String
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    String
  sender    User     @relation(fields: [senderId], references: [id])
  senderId  String
  createdAt DateTime @default(value: now()) @db.Timestamptz
  updatedAt DateTime @default(value: now()) @updatedAt @db.Timestamptz
}

model Room {
  id        String    @id @default(value: uuid())
  name      String?
  members   User[]
  messages  Message[]
  createdAt DateTime  @default(value: now()) @db.Timestamptz
  updatedAt DateTime  @default(value: now()) @updatedAt @db.Timestamptz
}

model User {
  id           String    @id @default(value: uuid())
  username     String    @unique
  email        String?   @unique
  openIdSub    String?   @unique
  firstName    String?
  lastName     String?
  avatarUrl    String?
  rooms        Room[]
  sentMessages Message[]
  createdAt    DateTime  @default(value: now()) @db.Timestamptz
  updatedAt    DateTime  @default(value: now()) @updatedAt @db.Timestamptz
}
